<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.SomeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary_color</item>
    <item name="colorPrimaryVariant">@color/primary_dark_color</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/primary_dark_color</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->

    <item name="android:autofilledHighlight">@android:color/transparent</item>
  </style>

  <style name="SplashTheme" parent="Theme.SomeApp">
    <item name="android:windowBackground">@drawable/splash</item>
  </style>

  <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
    <item name="colorPrimaryDark">@color/primary_dark_color</item>
    <item name="colorAccent">@color/text_on_primary</item>
    <item name="colorPrimary">@color/primary_color</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowBackground">@color/background_color</item>
    <item name="actionMenuTextColor">@color/text_on_primary</item>
  </style>

  <style name="Slide">
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_down</item>
  </style>
</resources>