<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="text">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/montserrat_regular</item>
    <item name="android:textColor">@color/secondary_color</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="text.justify" parent="text">
    <item name="android:justificationMode">inter_word</item>
  </style>

  <style name="text.items" parent="text">
    <item name="android:paddingTop">7dp</item>
  </style>

  <style name="text.roles.content" parent="text.justify">
    <item name="android:paddingTop">7dp</item>
  </style>

  <style name="text.roles.headers" parent="text.roles.content">
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingTop">20dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:textSize">15sp</item>
  </style>

  <style name="header" parent="text">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="smallText" parent="text">
    <item name="android:textSize">13sp</item>
  </style>

</resources>